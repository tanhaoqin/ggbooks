<div class="container">
	<h1>Hello, Admin</h1>
	
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="infoHeader">
			<h4 class="panel-title">
			<a role="button" data-toggle="collapse" data-parent="#accordion" data-target="#infoContent" aria-expanded="true" aria-controls="infoContent">
				Add Books
			</a>
			</h4>
		</div>
		<div id="infoContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="infoHeader">
			<div class="panel-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label for="account-name" class="col-sm-2 control-label">Title</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="book.name" placeholder="Title" value="">
						</div>
					</div>
					<div class="form-group">
						<label for="account-email" class="col-sm-2 control-label">ISBN13</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="book.isbn" placeholder="ISBN13" value="">
						</div>
					</div>
					<div class="form-group">
						<label for="account-password" class="col-sm-2 control-label">Author</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="book.author" placeholder="Author">
						</div>
					</div>
					<div class="form-group">
						<label for="account-password" class="col-sm-2 control-label">Format</label>
						<div class="col-sm-10">
							<select ng-model="book.format" class="form-control">
								<option ng-selected="true">Hardcover</option>
								<option>Paperback</option>
							</select>
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Price</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="book.price" placeholder="Price">
						</div>
					</div>
					<div class="form-group">
						<label for="account-password" class="col-sm-2 control-label">Publisher</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="book.publisher" placeholder="Publisher">
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Summary</label>
						<div class="col-sm-10">
							<textarea rows="4" cols="50" class="form-control" maxlength="3600" ng-model="book.summary" placeholder="Please type the summary of the book here."></textarea>
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Quantity</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="book.quantity" placeholder="Copies">
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Year</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="book.year" placeholder="Year">
						</div>
					</div>
					<div class="form-group">
						<label for="account-address" class="col-sm-2 control-label">Image URL</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="book.url" placeholder="Image URL" value="">
						</div>
					</div>
					<div class="form-group">
						<label for="account-address" class="col-sm-2 control-label">Subject</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="book.subject" placeholder="Subject" value="">
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" ng-click="insertBook(book.name, book.isbn, book.author, book.format, book.price, book.publisher, book.summary, book.quantity, book.year, book.url, book.subject)" class="btn btn-primary">Insert Book</button>
						</div>
					</div>
					<hr>
				</form>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="infoHeader">
			<h4 class="panel-title">
			<a role="button" data-toggle="collapse" data-parent="#accordion" data-target="#infoContent" aria-expanded="true" aria-controls="infoContent">
				Increase Quantity
			</a>
			</h4>
		</div>
		<div id="infoContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="infoHeader">
			<div class="panel-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label for="account-email" class="col-sm-2 control-label">ISBN13</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="isbn" placeholder="ISBN13" value="">
							<!-- Add search here. When search done, change to book info and increase quantity -->
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" ng-click="getBook(isbn)" class="btn btn-primary">Search For Book</button>
						</div>
					</div>
					<hr>
				</form>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="ordersHeader">
			<h4 class="panel-title">
			<a class="collapsed" role="button" data-toggle="collapse" data-target="#ordersContent" aria-expanded="true" aria-controls="ordersContent">
				Statistics
			</a>
			</h4>
		</div>
		<div id="ordersContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="ordersHeader">
			<div class="panel-body list-group">
				<div class="list-group-item">
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Title</span>
						</div>
						<div class="col-sm-10 profile">
							<span>Never Let You Go</span>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Date</span>
						</div>
						<div class="col-sm-10 profile">
							<span>11/11/11</span>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Price </span>
						</div>
						<div class="col-sm-10 profile">
							<span>$1.00</span>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Quantity Ordered</span>
						</div>
						<div class="col-sm-10 profile">
							<span>2</span>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Total Price</span>
						</div>
						<div class="col-sm-10 profile">
							<span>$2.00</span>
						</div>
					</div>
				</div>
				<div class="list-group-item">
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Title</span>
						</div>
						<div class="col-sm-10 profile">
							<span>Never Let You Go</span>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-2 profile profile-label">
							<span>Date</span>
						</div>
						<div class="col-sm-10 profile">
							<span>11/11/11</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
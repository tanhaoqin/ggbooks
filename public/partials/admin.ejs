<div class="container">
	<h1>Hello, Admin</h1>
	
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="infoHeader">
			<h4 class="panel-title">
			<a role="button" data-toggle="collapse" data-parent="#accordion" data-target="#infoContent" aria-expanded="true" aria-controls="infoContent">
				Add Books
			</a>
			</h4>
		</div>
		<div id="infoContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="infoHeader">
			<div class="panel-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label for="account-name" class="col-sm-2 control-label">Title</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="name" placeholder="Title" value="">
						</div>
					</div>
					<div class="form-group">
						<label for="account-email" class="col-sm-2 control-label">ISBN13</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="isbn" placeholder="ISBN13" value="">
						</div>
					</div>
					<div class="form-group">
						<label for="account-password" class="col-sm-2 control-label">Author</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="author" placeholder="Author">
						</div>
					</div>
					<div class="form-group">
						<label for="account-password" class="col-sm-2 control-label">Format</label>
						<div class="col-sm-10">
							<select ng-model="format" class="form-control">
								<option ng-selected="true">Hardcover</option>
								<option>Paperback</option>
							</select>
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Price</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="price" placeholder="Price">
						</div>
					</div>
					<div class="form-group">
						<label for="account-password" class="col-sm-2 control-label">Publisher</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="publisher" placeholder="Publisher">
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Summary</label>
						<div class="col-sm-10">
							<textarea rows="4" cols="50" class="form-control" maxlength="3600" ng-model="summary" placeholder="Please type the summary of the book here."></textarea>
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Quantity</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="quantity" placeholder="Copies">
						</div>
					</div>
					<div class="form-group">
						<label for="account-retype" class="col-sm-2 control-label">Year</label>
						<div class="col-sm-10">
							<input type="number" class="form-control" ng-model="year" placeholder="Year">
						</div>
					</div>
					<div class="form-group">
						<label for="account-address" class="col-sm-2 control-label">Image URL</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="url" placeholder="Image URL" value="">
						</div>
					</div>
					<div class="form-group">
						<label for="account-address" class="col-sm-2 control-label">Subject</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="subject" placeholder="Subject" value="">
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" ng-click="insertBook(name, isbn, author, format, price, publisher, summary, quantity, year, url, subject)" class="btn btn-primary">Insert Book</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="quantityHeader">
			<h4 class="panel-title">
			<a role="button" data-toggle="collapse" data-parent="#accordion" data-target="#infoContent" aria-expanded="true" aria-controls="infoContent">
				Increase Quantity
			</a>
			</h4>
		</div>
		<div id="infoContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="quantityHeader">
			<div class="panel-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label for="account-email" class="col-sm-2 control-label">ISBN13</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" ng-model="quantityisbn" placeholder="ISBN13" value="">
							<!-- Add search here. When search done, change to book info and increase quantity -->
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button type="submit" ng-click="getBook(quantityisbn)" class="btn btn-primary">Search For Book</button>
						</div>
					</div>
					<div class="panel-body list-group">
						<div class="list-group-item" ng-show="bookFound">
							<div class="row">
								<div class="col-sm-2 profile profile-label">
									<span>Title</span>
								</div>
								<div class="col-sm-10 profile">
									<span>{{book.title}}</span>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-2 profile profile-label">
									<span>ISBN 13</span>
								</div>
								<div class="col-sm-10 profile">
									<span>{{book.isbn13}}</span>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-2 profile profile-label">
									<span>Subject</span>
								</div>
								<div class="col-sm-10 profile">
									<span>{{book.subject}}</span>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-2 profile profile-label">
									<span>Price </span>
								</div>
								<div class="col-sm-10 profile">
									<span>{{book.price}}</span>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-2 profile profile-label">
									<span>Quantity</span>
								</div>
								<div class="col-sm-10 profile">
									<span>{{book.copies}}</span>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-2 profile profile-label">
									<span>Author</span>
								</div>
								<div class="col-sm-10 profile">
									<span>{{book.author}}</span>
								</div>
							</div>
							<hr>
							<div class="form-group">
								<label for="account-retype" class="col-sm-2 control-label">Increase Quantity By:</label>
								<div class="col-sm-10">
									<input type="number" class="form-control" ng-model="book.quantity" placeholder="Quantity">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-2 col-sm-10">
									<button type="submit" ng-click="updateQuantity(book.quantity, quantityisbn)" class="btn btn-primary">Update Quantity</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="popularBookHeader">
			<h4 class="panel-title">
			<a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" data-target="#popularBookContent" aria-expanded="true" aria-controls="popularBookContent">
				Most Popular Books
			</a>
			</h4>
		</div>
		<div id="popularBookContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="popularBookHeader">
			<div class="panel-body list-group">
				<div class="form-group">
					<label for="account-email" class="col-sm-2 control-label">Quantity</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" ng-model="popularbook.quantity" placeholder="Quantity" value="">
					</div>
				</div>
				<br>
				<br>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" ng-click="getPopularBook(popularbook.quantity)" class="btn btn-primary">Get Popular Books</button>
					</div>
				</div>
				<br>
				<br>
				<div ng-repeat="item in popularbooks" class="list-group-item">
					<div class="row" ng-show="popularBookFound">
						<div class="col-sm-2">
							<div class="thumbnail profile-thumbnail">
								<img src="{{item.image_url}}" alt="">
							</div>
						</div>
						<div class="col-sm-7">
							<p><span class="details-label">Title: </span>{{item.title}}</p>
							<p><span class="details-label">Author: </span>{{item.author}}</p>
							<p><span class="details-label">ISBN-13: </span>{{item.isbn13}}</p>
							<div class="rating-container">
								<span class="fa-stack" ng-repeat="i in countFullStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x yellow"></i>
								</span>
								<span class="fa-stack" ng-repeat="i in countHalfStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star-half fa-stack-1x"></i>
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x"></i>
								</span>
								<span class="fa-stack" ng-repeat="i in countEmptyStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="popularHeader">
			<h4 class="panel-title">
			<a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" data-target="#popularContent" aria-expanded="true" aria-controls="popularContent">
				Most Popular Authors
			</a>
			</h4>
		</div>
		<div id="popularContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="popularHeader">
			<div class="panel-body list-group">
				<div class="form-group">
					<label for="account-email" class="col-sm-2 control-label">Quantity</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" ng-model="popularauthor.quantity" placeholder="Quantity" value="">
					</div>
				</div>
				<br>
				<br>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" ng-click="getPopularAuthor(popularauthor.quantity)" class="btn btn-primary">Get Popular Authors</button>
					</div>
				</div>
				<br>
				<br>
				<div ng-repeat="item in popularauthors" class="list-group-item">
					<div class="row" ng-show="popularAuthorFound">
						<div class="col-sm-7">
							<p><span class="details-label">Author: </span>{{item.author}}</p>
							<p><span class="details-label">Number Of Books sold: </span>{{item.count}}</p>
							<div class="rating-container">
								<span class="fa-stack" ng-repeat="i in countFullStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x yellow"></i>
								</span>
								<span class="fa-stack" ng-repeat="i in countHalfStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star-half fa-stack-1x"></i>
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x"></i>
								</span>
								<span class="fa-stack" ng-repeat="i in countEmptyStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" role="tab" id="popularPublisherHeader">
			<h4 class="panel-title">
			<a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" data-target="#popularPublisherContent" aria-expanded="true" aria-controls="popularPublisherContent">
				Most Popular Publishers
			</a>
			</h4>
		</div>
		<div id="popularPublisherContent" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="popularPublisherHeader">
			<div class="panel-body list-group">
				<div class="form-group">
					<label for="account-email" class="col-sm-2 control-label">Quantity</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" ng-model="popularpublisher.quantity" placeholder="Quantity" value="">
					</div>
				</div>
				<br>
				<br>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" ng-click="getPopularPublisher(popularpublisher.quantity)" class="btn btn-primary">Get Popular Publishers</button>
					</div>
				</div>
				<br>
				<br>
				<div ng-repeat="item in popularpublishers" class="list-group-item">
					<div class="row" ng-show="popularPublisherFound">
						<div class="col-sm-7">
							<p><span class="details-label">Publisher Name: </span>{{item.publisher}}</p>
							<p><span class="details-label">Number Of Books sold: </span>{{item.count}}</p>
							<div class="rating-container">
								<span class="fa-stack" ng-repeat="i in countFullStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x yellow"></i>
								</span>
								<span class="fa-stack" ng-repeat="i in countHalfStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star-half fa-stack-1x"></i>
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x"></i>
								</span>
								<span class="fa-stack" ng-repeat="i in countEmptyStars(item.avgScore) track by $index">
									<i class="fa fa-fw fa-lg fa-star fa-stack-1x"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
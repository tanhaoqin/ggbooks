<div class="container">
	<div class="row">
		<h2>Search Results</h2>
		<div class="sorting">
			<h4>Sort By: </h4>
			<select ng-model="sortingStyle" ng-change="sortArray()"class="form-control">
				<option ng-selected="true">Normal</option>
				<option>Year</option>
				<option>Average Rating</option>
			</select>
		</div>
		<br>
		<hr>
		<div ng-repeat="item in searchArray">
			<div class="profile well">
				<div class="row">
					<div class="col-sm-2">
						<div class="thumbnail profile-thumbnail">
							<a href="#/book/{{item.isbn13}}"><img src={{item.image_url}} alt="{{item.title}}"></a>
						</div>
					</div>
					<div class="col-sm-7">
						<h2><span class="details-label">Title: </span><a href="#/book/{{item.isbn13}}">{{item.title}}</a></h2>
						<h4><span class="details-label">Year: </span>{{item.year}}</h4>
						<h4><span class="details-label">Author: </span>{{item.author}}</h4>
						<h4><span class="details-label">Publisher: </span>{{item.publisher}}</h4>
						<h4><span class="details-label">ISBN-13: </span>{{item.isbn13}}</h4>
						<h3><span class="details-label">Price: </span>${{item.price}}</h3>
					</div>
				</div>
			</div>
		</div>		
	</div>
</div>
</div>
